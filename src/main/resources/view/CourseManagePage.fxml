<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.CourseManagePageController"
            prefWidth="900.0" prefHeight="600.0"
            style="-fx-background-color: #f4f6f9;">

    <!-- Top Bar -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #74ebd5; -fx-padding: 15;">
            <Label text="Course Management"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnBack" text="Back to Menu"
                    style="-fx-background-color: white; -fx-text-fill: #74ebd5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Form Section -->
            <GridPane hgap="15" vgap="15" alignment="CENTER_LEFT">
                <Label text="Course ID:"/>
                <TextField fx:id="txtCourseId" promptText="C001" GridPane.columnIndex="1"/>

                <Label text="Name:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtCourseName" promptText="Enter Course Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Duration:" GridPane.rowIndex="2"/>
                <TextField fx:id="txtDuration" promptText="e.g. 6 Months" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Fee:" GridPane.rowIndex="3"/>
                <TextField fx:id="txtFee" promptText="Enter Course Fee" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Description:" GridPane.rowIndex="4"/>
                <TextArea fx:id="txtDescription" promptText="Enter Description" prefRowCount="3"
                          GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAdd" text="Add" prefWidth="100"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button fx:id="btnClear" text="Clear" prefWidth="100"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white;"/>
            </HBox>

            <!-- TableView -->
            <TableView fx:id="tblCourses" prefHeight="300" prefWidth="850">
                <columns>
                    <TableColumn fx:id="colCourseId" text="Course ID" prefWidth="100"/>
                    <TableColumn fx:id="colCourseName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colDuration" text="Duration" prefWidth="150"/>
                    <TableColumn fx:id="colFee" text="Fee" prefWidth="120"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="280"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>

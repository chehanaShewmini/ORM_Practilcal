<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="468.0" prefWidth="723.0" style="-fx-background-radius: 30; -fx-border-radius: 30;" styleClass="root" stylesheets="@../styles/background.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.ManageAssignCoursePopup">
    <VBox layoutX="12.0" layoutY="14.0" prefHeight="423.0" prefWidth="701.0" spacing="10" style="-fx-border-color: #000000; -fx-border-radius: 30; -fx-background-radius: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Assign Courses to Instructor">
                <VBox.margin>
                    <Insets left="150.0" />
                </VBox.margin>
                <effect>
                    <DropShadow />
                </effect></Label>

            <HBox spacing="10">
                <Label text="Course ID:">
                    <HBox.margin>
                        <Insets left="30.0" />
                    </HBox.margin></Label>
                <TextField fx:id="txtCourseId" promptText="Enter Course ID">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin></TextField>
                <Button fx:id="btnAssignCourse" onAction="#btnAssignCourseOnAction" style="-fx-background-color: #78e08f;" text="+ AssignCourse">
                    <HBox.margin>
                        <Insets left="150.0" />
                    </HBox.margin></Button>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </HBox>

            <TableView fx:id="tblCourses" prefHeight="317.0" prefWidth="628.0">
                <columns>
                    <TableColumn fx:id="colCourseId" prefWidth="75.0" text="courseId" />
                    <TableColumn fx:id="colCourseName" prefWidth="112.0" text="courseName" />
                    <TableColumn fx:id="colDuration" prefWidth="108.0" text="duration" />
                    <TableColumn fx:id="colFee" prefWidth="89.0" text="fee" />
                    <TableColumn fx:id="colDescription" prefWidth="166.0" text="description" />
                    <TableColumn fx:id="colEnrollmentCount" prefWidth="128.0" text="enrollmentCount" />
                </columns>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </TableView>
        </children>
    </VBox>
</AnchorPane>

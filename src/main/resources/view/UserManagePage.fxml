<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UserManagePageController"
            prefWidth="900.0" prefHeight="600.0"
            style="-fx-background-color: #f4f6f9;">

    <!-- Top Bar -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #74ebd5; -fx-padding: 15;">
            <Label text="User Management"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnBack" text="Back to Menu"
                    style="-fx-background-color: white; -fx-text-fill: #74ebd5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Form Section -->
            <GridPane hgap="15" vgap="15" alignment="CENTER_LEFT">
                <Label text="User ID:"/>
                <TextField fx:id="txtUserId" promptText="U001" GridPane.columnIndex="1"/>

                <Label text="Username:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtUsername" promptText="Enter Username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="2"/>
                <PasswordField fx:id="txtPassword" promptText="Enter Password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Confirm Password:" GridPane.rowIndex="3"/>
                <PasswordField fx:id="txtConfirmPassword" promptText="Re-enter Password" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Role:" GridPane.rowIndex="4"/>
                <ComboBox fx:id="cmbRole" GridPane.columnIndex="1" GridPane.rowIndex="4"
                          promptText="Select Role"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAdd" text="Add" prefWidth="100"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button fx:id="btnClear" text="Clear" prefWidth="100"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white;"/>
            </HBox>

            <!-- TableView -->
            <TableView fx:id="tblUsers" prefHeight="300" prefWidth="850">
                <columns>
                    <TableColumn fx:id="colUserId" text="User ID" prefWidth="100"/>
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="200"/>
                    <TableColumn fx:id="colRole" text="Role" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.MenuPageController"
            prefWidth="800.0" prefHeight="500.0"
            style="-fx-background-color: #f4f6f9;">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20"
              style="-fx-background-color: #74ebd5; -fx-padding: 15;">
            <Label text="Elite Driving School Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnProfile" text="Profile" style="-fx-background-color: white; -fx-text-fill: #74ebd5;"/>
            <Button fx:id="btnLogout" text="Logout" style="-fx-background-color: #ff6b6b; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <GridPane alignment="CENTER" hgap="20" vgap="20" style="-fx-padding: 30;">
            <Button fx:id="btnManageStudents" text="Manage Students" prefWidth="200" prefHeight="60"/>
            <Button fx:id="btnManageCourses" text="Manage Courses" prefWidth="200" prefHeight="60" GridPane.columnIndex="1"/>

            <Button fx:id="btnManageUsers" text="Manage Users" prefWidth="200" prefHeight="60" GridPane.rowIndex="1"/>
            <Button fx:id="btnManageInstructors" text="Manage Instructors" prefWidth="200" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Button fx:id="btnManageLessons" text="Manage Lessons" prefWidth="200" prefHeight="60" GridPane.rowIndex="2"/>
            <Button fx:id="btnManagePayments" text="Manage Payments" prefWidth="200" prefHeight="60" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
    </center>
</BorderPane>

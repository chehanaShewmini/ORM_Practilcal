<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginPageController"
            prefWidth="600.0" prefHeight="400.0"
            style="-fx-background-color: linear-gradient(to right, #74ebd5, #ACB6E5);">

    <children>
        <VBox alignment="CENTER" spacing="15"
              layoutX="150" layoutY="60"
              prefWidth="300" prefHeight="280"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">

            <Label text="Elite Driving School" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label text="Login" style="-fx-font-size: 16px; -fx-text-fill: #333;"/>

            <TextField fx:id="txtUsername" promptText="Username" prefWidth="250"/>
            <PasswordField fx:id="txtPassword" promptText="Password" prefWidth="250"/>

            <CheckBox fx:id="chkShowPassword" text="Show Password"/>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Role:"/>
                <ComboBox fx:id="cmbRole" promptText="Select Role" prefWidth="150"/>
            </HBox>

            <Button fx:id="btnLogin" text="Login" prefWidth="120" style="-fx-background-color: #74ebd5; -fx-text-fill: white;"/>
            <Hyperlink fx:id="lnkChangePassword" text="Change Password"/>

        </VBox>
    </children>
</AnchorPane>

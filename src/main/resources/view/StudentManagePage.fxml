<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.StudentManagePageController"
            prefWidth="1000.0" prefHeight="650.0"
            style="-fx-background-color: #f4f6f9;">

    <!-- Top Bar -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #74ebd5; -fx-padding: 15;">
            <Label text="Student Management"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnBack" text="Back to Menu"
                    style="-fx-background-color: white; -fx-text-fill: #74ebd5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Form Section -->
            <GridPane hgap="15" vgap="15" alignment="CENTER_LEFT">

                <Label text="Student ID:"/>
                <TextField fx:id="txtStudentId" promptText="S001" GridPane.columnIndex="1"/>

                <Label text="First Name:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtFirstName" promptText="Enter First Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Last Name:" GridPane.rowIndex="2"/>
                <TextField fx:id="txtLastName" promptText="Enter Last Name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Email:" GridPane.rowIndex="3"/>
                <TextField fx:id="txtEmail" promptText="example@mail.com" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Phone:" GridPane.rowIndex="4"/>
                <TextField fx:id="txtPhone" promptText="+94XXXXXXXXX" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Address:" GridPane.rowIndex="5"/>
                <TextArea fx:id="txtAddress" promptText="Enter Address" prefRowCount="2"
                          GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Date of Birth:" GridPane.rowIndex="6"/>
                <DatePicker fx:id="dpDob" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Registration Date:" GridPane.rowIndex="7"/>
                <DatePicker fx:id="dpRegDate" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAdd" text="Add" prefWidth="100"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button fx:id="btnClear" text="Clear" prefWidth="100"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white;"/>
            </HBox>

            <!-- TableView -->
            <TableView fx:id="tblStudents" prefHeight="300" prefWidth="950">
                <columns>
                    <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100"/>
                    <TableColumn fx:id="colFirstName" text="First Name" prefWidth="150"/>
                    <TableColumn fx:id="colLastName" text="Last Name" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="colAddress" text="Address" prefWidth="200"/>
                    <TableColumn fx:id="colDob" text="DOB" prefWidth="120"/>
                    <TableColumn fx:id="colRegDate" text="Reg. Date" prefWidth="120"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>

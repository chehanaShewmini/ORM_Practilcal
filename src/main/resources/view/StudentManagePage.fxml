<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="ancStudentPage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.StudentManagePageController" prefWidth="1000" prefHeight="700">

    <children>
        <VBox spacing="15" padding="20">
            <!-- Title -->
            <Label text="Manage Students" style="-fx-font-size:20px; -fx-font-weight:bold;" />

            <!-- Form Fields -->
            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="75"/>
                </columnConstraints>

                <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="lblStudentId" text="S001" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtFirstName" promptText="Enter First Name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtLastName" promptText="Enter Last Name" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" promptText="example@mail.com" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPhone" promptText="07XXXXXXXX" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAddress" promptText="Enter Address" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Date of Birth:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDateOfBirth" promptText="YYYY-MM-DD" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Registration Date:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="txtRegistrationDate" promptText="YYYY-MM-DD" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="10">
                <Button fx:id="btnSave" text="Save" onAction="#btnSaveOnAction"/>
                <Button fx:id="btnUpdate" text="Update" onAction="#btnUpdateOnAction"/>
                <Button fx:id="btnDelete" text="Delete" onAction="#btnDeleteOnAction"/>
                <Button fx:id="btnReset" text="Reset" onAction="#btnResetOnAction"/>
            </HBox>

            <!-- Search -->
            <HBox spacing="10">
                <Label text="Search:"/>
                <TextField fx:id="txtSearch" onKeyReleased="#search" promptText="Search by name or ID"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="tblStudent" prefHeight="400" onMouseClicked="#OnClickedTable">
                <columns>
                    <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="100"/>
                    <TableColumn fx:id="colFirstName" text="First Name" prefWidth="120"/>
                    <TableColumn fx:id="colLastName" text="Last Name" prefWidth="120"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="160"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="colAddress" text="Address" prefWidth="160"/>
                    <TableColumn fx:id="colDob" text="Date of Birth" prefWidth="120"/>
                    <TableColumn fx:id="colRegistrationDate" text="Registration Date" prefWidth="140"/>
                </columns>
            </TableView>

            <!-- Back to Dashboard -->
            <Button text="Back to Dashboard" onMouseClicked="#goToDashboard"/>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.PaymentPageController"
            prefWidth="950.0" prefHeight="600.0"
            style="-fx-background-color: #f4f6f9;">

    <!-- Top Bar -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #74ebd5; -fx-padding: 15;">
            <Label text="Payment Management"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnBack" text="Back to Menu"
                    style="-fx-background-color: white; -fx-text-fill: #74ebd5;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Form Section -->
            <GridPane hgap="15" vgap="15" alignment="CENTER_LEFT">
                <Label text="Payment ID:"/>
                <TextField fx:id="txtPaymentId" promptText="P001" GridPane.columnIndex="1" editable="false"/>

                <Label text="Student ID:" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cmbStudentId" promptText="Select Student" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Payment Method:" GridPane.rowIndex="2"/>
                <ComboBox fx:id="cmbMethod" promptText="Select Method" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Payment Type:" GridPane.rowIndex="3"/>
                <ComboBox fx:id="cmbType" promptText="Full / Partial" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Amount:" GridPane.rowIndex="4"/>
                <TextField fx:id="txtAmount" promptText="Enter Amount" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Payment Date:" GridPane.rowIndex="5"/>
                <DatePicker fx:id="dpPaymentDate" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAddPayment" text="Add" prefWidth="100"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button fx:id="btnUpdatePayment" text="Update" prefWidth="100"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Button fx:id="btnDeletePayment" text="Delete" prefWidth="100"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                <Button fx:id="btnClearPayment" text="Clear" prefWidth="100"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white;"/>
                <Button fx:id="btnGenerateReport" text="Generate Report" prefWidth="150"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
            </HBox>

            <!-- TableView -->
            <TableView fx:id="tblPayments" prefHeight="300" prefWidth="900">
                <columns>
                    <TableColumn fx:id="colPaymentId" text="Payment ID" prefWidth="100"/>
                    <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="150"/>
                    <TableColumn fx:id="colMethod" text="Method" prefWidth="150"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="colAmount" text="Amount" prefWidth="120"/>
                    <TableColumn fx:id="colPaymentDate" text="Payment Date" prefWidth="150"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
